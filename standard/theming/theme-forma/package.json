{
  "name": "@fullcalendar/theme-forma",
  "version": "7.0.0-beta.5",
  "peerDependencies": {
    "@fullcalendar/core": "workspace:7.0.0-beta.5"
  },
  "devDependencies": {
    "@fullcalendar/core": "workspace:7.0.0-beta.5",
    "@fullcalendar/timeline": "workspace:7.0.0-beta.5",
    "@fullcalendar/resource-daygrid": "workspace:7.0.0-beta.5",
    "@fullcalendar/resource-timegrid": "workspace:7.0.0-beta.5",
    "@fullcalendar/resource-timeline": "workspace:7.0.0-beta.5",
    "@fullcalendar/adaptive": "workspace:7.0.0-beta.5",
    "@fullcalendar/scrollgrid": "workspace:7.0.0-beta.5",
    "@fullcalendar/list": "workspace:7.0.0-beta.5",
    "@fullcalendar/multimonth": "workspace:7.0.0-beta.5"
  },
  "scripts": {
    "build": "standard-scripts pkg:build && pnpm run clean-dist",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint .",
    "clean-dist": "rm -f dist/palettes/*.js dist/palettes/*.min.js dist/palettes/*.css.js"
  },
  "type": "module",
  "tsConfig": {
    "extends": "@fullcalendar-scripts/standard/config/tsconfig.browser.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": {
        "module": true,
        "globalVar": "FullCalendar.ThemeForma"
      },
      "./global": {
        "iife": true,
        "globalVar": "FullCalendar.ThemeForma",
        "css": true
      },
      "./palettes/blue": {
        "iife": true,
        "css": true
      },
      "./palettes/green": {
        "iife": true,
        "css": true
      },
      "./palettes/purple": {
        "iife": true,
        "css": true
      },
      "./palettes/red": {
        "iife": true,
        "css": true
      }
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
