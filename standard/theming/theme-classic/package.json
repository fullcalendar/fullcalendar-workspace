{
  "name": "@fullcalendar/theme-classic",
  "private": true,
  "version": "0.0.0",
  "peerDependencies": {
    "@fullcalendar/core": "workspace:7.0.0-rc.0"
  },
  "devDependencies": {
    "@fullcalendar/core": "workspace:7.0.0-rc.0",
    "@fullcalendar/timeline": "workspace:7.0.0-rc.0",
    "@fullcalendar/resource-daygrid": "workspace:7.0.0-rc.0",
    "@fullcalendar/resource-timegrid": "workspace:7.0.0-rc.0",
    "@fullcalendar/resource-timeline": "workspace:7.0.0-rc.0",
    "@fullcalendar/adaptive": "workspace:7.0.0-rc.0",
    "@fullcalendar/scrollgrid": "workspace:7.0.0-rc.0",
    "@fullcalendar/list": "workspace:7.0.0-rc.0",
    "@fullcalendar/multimonth": "workspace:7.0.0-rc.0"
  },
  "scripts": {
    "build": "standard-scripts pkg:build && pnpm run clean-dist",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint .",
    "clean-dist": "rm -f dist/palette.js dist/palette.min.js dist/palette.css.js"
  },
  "type": "module",
  "tsConfig": {
    "extends": "@fullcalendar-scripts/standard/config/tsconfig.browser.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": {
        "module": true,
        "globalVar": "FullCalendar.ThemeClassic"
      },
      "./global": {
        "iife": true,
        "globalVar": "FullCalendar.ThemeClassic",
        "css": true
      },
      "./palette": {
        "iife": true,
        "css": true
      }
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
